    $("#deleteProductBtn").click(function () {
        $.post('/Products/DeleteConfirmed', $("#deleteProductForm").serialize(), function (response) {
            if (response.success) {
                toastr.success(response.message);
                $("#deleteProductModal").modal('hide');
                setTimeout(function () {
                    location.reload();
                }, 2000);
            } else {
                toastr.error(response.message);
            }
        });
    });
